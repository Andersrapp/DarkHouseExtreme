<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ff000000">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/darkhouse"
            android:id="@+id/textView"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:layout_marginTop="20dp"
            android:textColor="#ffffffff"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/buttonz"
                android:id="@+id/newGame"
                android:layout_gravity="center"
                android:layout_marginTop="50dp" />

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/buttonz"
                android:id="@+id/selectCharacter"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/buttonz"
                android:id="@+id/quit"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"/>
    </LinearLayout>
</LinearLayout><!-- From: file:/Users/Chobii/Documents/Javautvecklare/Android/DarkHouseExtreme/app/src/main/res/layout/startscreenfragment.xml -->