<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragRel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="60dp"
    android:background="@drawable/combination_bg"
    android:gravity="center_horizontal|center_vertical"
    android:clickable="true"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#00ffffff"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="20"

        >

        <TextView
            android:id="@+id/number1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="4"
            android:background="@drawable/combination_input_bg1"
            android:gravity="center_horizontal|center_vertical"
            android:text="0"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="40sp"

            />

        <TextView
            android:id="@+id/number2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="4"
            android:background="@drawable/combination_input_bg2"
            android:gravity="center_horizontal|center_vertical"
            android:text="0"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="40sp"

            />

        <TextView
            android:id="@+id/number3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="4"
            android:background="@drawable/combination_input_bg3"
            android:gravity="center_horizontal|center_vertical"
            android:text="0"
            android:textColor="#000000"
            android:textSize="40sp"

            />

        <TextView
            android:id="@+id/number4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="4"
            android:background="@drawable/combination_input_bg4"
            android:gravity="center_horizontal|center_vertical"
            android:text="0"
            android:textColor="#000000"
            android:textSize="40sp"

            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:layout_margin="10dp"
            android:weightSum="30"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="9"
                android:weightSum="2"
                >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/greenLight"
                    android:background="@drawable/unlit_green_led"
                    android:layout_weight="1"
                    />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/greenLight"
                    android:id="@+id/redLight"
                    android:background="@drawable/unlit_red_led"
                    android:layout_weight="1"

                    />
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                />
                <Button
                    android:id="@+id/enterButton"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="9"
                    android:background="@drawable/combination_button1"
                    android:text="@string/enter_combination_button"
                    android:textColor="#000000"
                    />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                />


                <Button
                    android:id="@+id/resetButton"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="9"
                    android:background="@drawable/combination_button2"
                    android:text="@string/reset_combination_button"
                    android:textColor="#000000"
                    />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>